<h2>Shop</h2>

<p id="notice"><%= notice %></p>

<% if @products.empty? then %>
  <p>No product created.</p>
<% else %>
  <p>
    <table border="1">
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th colspan="2">Action</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.name %></td>
            <td><%= product.price %></td>
            <td><%= link_to 'Detail', product %></td>
            <% if @user.purchased_products.select {|val| val.product_id == product.id}.empty? %>
              <td>-</td>
            <% else %>
              <td><%= link_to 'Document', document_path(product.id) %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </p>
<% end %>

<%= link_to 'Back', root_path %>
