<h1>BuddyBot</h1>

<h2>Mission List</h2>
<table border="1">
  <thead>
    <tr>
      <th>Body</th>
      <th>Difficulty</th>
      <th>Closed</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @missions.each do |mission| %>
      <tr>
        <td><%= mission.body %></td>
        <td><%= difficulty_text mission.difficulty %></td>
        <td><%= mission.closed %></td>
        <td><%= link_to 'Show', mission %></td>
        <td><%= link_to 'Edit', edit_mission_path(mission) %></td>
        <td><%= link_to 'Destroy', mission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mission', new_mission_path %><br>
<%= link_to 'Products', products_path %>
